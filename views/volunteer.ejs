  <script>
    var input = document.getElementById('country');

    function saveSettings() {
      var local = input.value
      $.ajax({
        type: "POST",
        url: "/searchVolunteer",
        data: {
          "location": local 
        },
        success: (res) => {
          res.jobs.forEach(job => {
            
            $('.searchResults').append('<div class="card m-5"><div class="container-fluid card-body"><div class="row mb-4"><div class="col-md-7"><h3>'+job.title+'</h3><h3>'+job.company_name+'</h3><p>'+job.description+'</p><h3 class="pb-2">Posted on '+job.extensions[0]+' '+job.via+'</h3><div class="row"><div class="col-md-6"><a id=lookupAnchor href="https://www.google.com/search?q='+ job.title + "+" + job.company_name + "+" + job.via+'" target="_blank" class="btn btn-success" role="button">Lookup Job</a></div><div class="col-md-6"><h3>Address</h3><button type="button" class="btn btn-success">Maps</button></div></div></div></div></div></div>')
            
